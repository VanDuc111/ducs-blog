---
interface Props {
  items: {
    label: string;
    href?: string;
  }[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-10">
  <ol
    class="flex flex-wrap items-center gap-2 text-sm font-mono text-slate-500/70"
  >
    <li class="flex items-center gap-2">
      <a href="/" class="hover:text-cyan-400 transition-colors">Trang Chính</a>
    </li>
    {
      items.map((item, index) => (
        <li class="flex items-center gap-2">
          <span class="text-slate-700">»</span>
          {item.href ? (
            <a href={item.href} class="hover:text-cyan-400 transition-colors">
              {item.label}
            </a>
          ) : (
            <span class="text-slate-400">{item.label}</span>
          )}
        </li>
      ))
    }
  </ol>
</nav>
